  </div>

  <!-- Toast Container -->
  <div id="toastContainer" class="fixed bottom-4 right-4 space-y-2 z-50"></div>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    // ==================== STATE ====================
    let authToken = localStorage.getItem('adminToken');
    let config = {};
    let currentUsersPage = 1;
    let vipPlans = [];
    let botMessages = {};

    // ==================== API ====================
    async function api(endpoint, options = {}) {
      const res = await fetch(`/api/admin${endpoint}`, {
        ...options,
        headers: {
          'Content-Type': 'application/json',
          'X-Admin-Token': authToken,
          ...options.headers
        },
        body: options.body ? JSON.stringify(options.body) : undefined
      });
      const data = await res.json();
      if (!res.ok) {
        if (res.status === 401) {
          logout();
          throw new Error('Session expired');
        }
        throw new Error(data.error || 'Request failed');
      }
      return data;
    }

    // ==================== AUTH ====================
    document.getElementById('loginForm').onsubmit = async (e) => {
      e.preventDefault();
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      
      try {
        const res = await fetch('/api/admin/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username, password })
        });
        const data = await res.json();
        
        if (data.success) {
          authToken = data.token;
          localStorage.setItem('adminToken', authToken);
          document.getElementById('adminName').textContent = username;
          showDashboard();
        } else {
          document.getElementById('loginError').textContent = data.error;
          document.getElementById('loginError').classList.remove('hidden');
        }
      } catch (err) {
        toast('Login failed', 'error');
      }
    };

    function logout() {
      api('/logout', { method: 'POST' }).catch(() => {});
      localStorage.removeItem('adminToken');
      authToken = null;
      document.getElementById('dashboard').classList.add('hidden');
      document.getElementById('loginScreen').classList.remove('hidden');
    }

    document.getElementById('logoutBtn').onclick = logout;

    // ==================== DASHBOARD ====================
    async function showDashboard() {
      document.getElementById('loginScreen').classList.add('hidden');
      document.getElementById('dashboard').classList.remove('hidden');
      
      await Promise.all([loadStats(), loadConfig()]);
    }

    async function loadStats() {
      try {
        const stats = await api('/stats');
        for (const [key, value] of Object.entries(stats)) {
          const el = document.getElementById(`stat-${key}`);
          if (el) el.textContent = typeof value === 'number' ? value.toLocaleString() : value;
        }
        // Update VIP stats on VIP tab as well
        const vipStat = document.getElementById('vip-stat-active');
        if (vipStat && stats.vipActive !== undefined) {
          vipStat.textContent = stats.vipActive.toLocaleString();
        }
        const planCount = document.getElementById('vip-stat-revenue');
        if (planCount && vipPlans) {
          planCount.textContent = vipPlans.length;
        }
        const popular = document.getElementById('vip-stat-popular');
        if (popular && vipPlans && vipPlans.length > 0) {
          popular.textContent = vipPlans[0].name || 'N/A';
        }
      } catch (err) {
        toast('Failed to load stats', 'error');
      }
    }

    async function refreshStats() {
      toast('Refreshing stats...', 'info');
      await loadStats();
      await loadActiveUsers();
      toast('Stats updated!', 'success');
    }

    async function loadActiveUsers() {
      try {
        const data = await api('/active-users');
        const container = document.getElementById('activeUsersList');
        
        if (!data.activeUsers || data.activeUsers.length === 0) {
          container.innerHTML = '<p class="text-gray-400 col-span-full">No active users at the moment.</p>';
          return;
        }
        
        container.innerHTML = data.activeUsers.map(u => `
          <div class="p-3 bg-gray-700 rounded-lg flex justify-between items-center">
            <div>
              <span class="font-mono text-sm">${u.userId}</span>
              <span class="ml-2 text-xs ${u.status === 'chatting' ? 'text-green-400' : 'text-yellow-400'}">
                ${u.status === 'chatting' ? 'ğŸ’¬ Chatting' : 'ğŸ” Searching'}
              </span>
            </div>
            <div class="flex gap-2">
              <button onclick="banUser('${u.userId}')" class="px-2 py-1 bg-red-600 hover:bg-red-700 rounded text-xs">Ban</button>
            </div>
          </div>
        `).join('');
      } catch (err) {
        document.getElementById('activeUsersList').innerHTML = '<p class="text-red-400">Failed to load active users</p>';
      }
    }

    async function loadConfig() {
      try {
        config = await api('/config');
        
        // Update toggles
        const toggleKeys = [
          'ENABLE_STARS_PAYMENTS', 'ENABLE_VIP', 'ENABLE_LOCK_CHAT', 
          'ENABLE_REFERRALS', 'ENABLE_ADMIN_ALERTS', 'ENABLE_CROSS_BOT_MATCHING',
          'ENABLE_AFFILIATE_SYSTEM', 'ENABLE_ABUSE_DETECTION', 'MAINTENANCE_MODE',
          'required_channel_enabled'
        ];
        
        toggleKeys.forEach(key => {
          const btn = document.getElementById(`toggle-${key}`);
          if (btn) updateToggleUI(btn, config[key] === true || config[key] === 'true');
          // Also update VIP tab toggle
          const vipTabBtn = document.getElementById(`toggle-vip-tab-${key}`);
          if (vipTabBtn) updateToggleUI(vipTabBtn, config[key] === true || config[key] === 'true');
        });
        
        // Update inputs
        ['lock_chat_5min_price', 'lock_chat_10min_price', 'lock_chat_15min_price',
         'required_channel_1', 'required_channel_2', 'referral_vip_days', 'affiliate_commission'
        ].forEach(key => {
          const el = document.getElementById(key);
          if (el) el.value = config[key] || '';
        });
        
        // Load VIP plans
        vipPlans = config.vip_plans_config || [];
        renderVipPlans();
        
      } catch (err) {
        toast('Failed to load config', 'error');
      }
    }

    function updateToggleUI(btn, isOn) {
      if (!btn) return;
      btn.classList.remove('toggle-on', 'toggle-off');
      btn.classList.add(isOn ? 'toggle-on' : 'toggle-off');
      const dot = btn.querySelector('span');
      if (dot) dot.style.transform = isOn ? 'translateX(24px)' : 'translateX(0)';
    }

    async function toggleConfig(key) {
      const btn = document.getElementById(`toggle-${key}`) || document.getElementById(`toggle-vip-tab-${key}`);
      const currentValue = config[key] === true || config[key] === 'true';
      const newValue = !currentValue;
      
      try {
        await api('/config', { method: 'POST', body: { key, value: newValue } });
        config[key] = newValue;
        // Update both toggles if they exist
        updateToggleUI(document.getElementById(`toggle-${key}`), newValue);
        updateToggleUI(document.getElementById(`toggle-vip-tab-${key}`), newValue);
        toast(`${key} ${newValue ? 'enabled' : 'disabled'}`, 'success');
      } catch (err) {
        toast(`Failed to update ${key}`, 'error');
      }
    }

    async function toggleMaintenance() {
      await toggleConfig('MAINTENANCE_MODE');
    }

    async function saveLockPricing() {
      try {
        const configs = [
          { key: 'lock_chat_5min_price', value: parseInt(document.getElementById('lock_chat_5min_price').value) || 15 },
          { key: 'lock_chat_10min_price', value: parseInt(document.getElementById('lock_chat_10min_price').value) || 25 },
          { key: 'lock_chat_15min_price', value: parseInt(document.getElementById('lock_chat_15min_price').value) || 35 }
        ];
        await api('/config/bulk', { method: 'POST', body: { configs } });
        toast('Lock pricing saved!', 'success');
      } catch (err) {
        toast('Failed to save lock pricing', 'error');
      }
    }

    async function saveChannels() {
      try {
        const configs = [
          { key: 'required_channel_1', value: document.getElementById('required_channel_1').value.trim() },
          { key: 'required_channel_2', value: document.getElementById('required_channel_2').value.trim() }
        ];
        await api('/config/bulk', { method: 'POST', body: { configs } });
        toast('Channels saved!', 'success');
      } catch (err) {
        toast('Failed to save channels', 'error');
      }
    }

    async function saveReferral() {
      try {
        const configs = [
          { key: 'referral_vip_days', value: parseInt(document.getElementById('referral_vip_days').value) || 10 },
          { key: 'affiliate_commission', value: parseFloat(document.getElementById('affiliate_commission').value) || 0.8 }
        ];
        await api('/config/bulk', { method: 'POST', body: { configs } });
        toast('Referral settings saved!', 'success');
      } catch (err) {
        toast('Failed to save referral settings', 'error');
      }
    }

    // ==================== USERS ====================
    async function searchUsers() {
      const search = document.getElementById('userSearch').value;
      const filter = document.getElementById('userFilter').value;
      
      try {
        const data = await api(`/users?page=${currentUsersPage}&search=${encodeURIComponent(search)}&filter=${filter}`);
        renderUsers(data);
      } catch (err) {
        toast('Failed to load users', 'error');
      }
    }

    function renderUsers(data) {
      const tbody = document.getElementById('usersList');
      tbody.innerHTML = data.users.map(u => `
        <tr>
          <td class="p-3 font-mono text-xs">${u.userId}</td>
          <td class="p-3">${u.telegramId || '-'}</td>
          <td class="p-3">${u.gender === 'M' ? 'ğŸ‘¨ Male' : u.gender === 'F' ? 'ğŸ‘© Female' : '-'}</td>
          <td class="p-3">
            ${u.banned ? '<span class="text-red-400">ğŸš« Banned</span>' : ''}
            ${u.isVip ? '<span class="text-yellow-400">â­ VIP</span>' : ''}
            ${!u.banned && !u.isVip ? '<span class="text-gray-400">Normal</span>' : ''}
          </td>
          <td class="p-3">${u.botId || '-'}</td>
          <td class="p-3 space-x-2">
            ${u.banned 
              ? `<button onclick="unbanUser('${u.userId}')" class="btn px-3 py-1 bg-green-600 hover:bg-green-700 rounded text-xs">Unban</button>`
              : `<button onclick="banUser('${u.userId}')" class="btn px-3 py-1 bg-red-600 hover:bg-red-700 rounded text-xs">Ban</button>`
            }
            <button onclick="grantVip('${u.userId}')" class="btn px-3 py-1 bg-yellow-600 hover:bg-yellow-700 rounded text-xs">+VIP</button>
          </td>
        </tr>
      `).join('');
      
      // Pagination
      const pagination = document.getElementById('usersPagination');
      pagination.innerHTML = '';
      for (let i = 1; i <= data.pages; i++) {
        const btn = document.createElement('button');
        btn.textContent = i;
        btn.className = `btn px-3 py-1 rounded ${i === data.page ? 'bg-indigo-600' : 'bg-gray-700 hover:bg-gray-600'}`;
        btn.onclick = () => { currentUsersPage = i; searchUsers(); };
        pagination.appendChild(btn);
      }
    }

    async function banUser(userId) {
      if (!confirm('Ban this user?')) return;
      try {
        await api(`/users/${userId}/ban`, { method: 'POST' });
        toast('User banned', 'success');
        searchUsers();
      } catch (err) {
        toast('Failed to ban user', 'error');
      }
    }

    async function unbanUser(userId) {
      try {
        await api(`/users/${userId}/unban`, { method: 'POST' });
        toast('User unbanned', 'success');
        searchUsers();
      } catch (err) {
        toast('Failed to unban user', 'error');
      }
    }

    async function grantVip(userId) {
      const days = prompt('VIP days to grant:', '30');
      if (!days) return;
      try {
        await api(`/users/${userId}/vip`, { method: 'POST', body: { days: parseInt(days) } });
        toast('VIP granted!', 'success');
        searchUsers();
      } catch (err) {
        toast('Failed to grant VIP', 'error');
      }
    }

    // ==================== BOTS ====================
    async function loadBots() {
      try {
        const data = await api('/bots');
        renderBots(data.bots);
      } catch (err) {
        toast('Failed to load bots', 'error');
      }
    }

    function renderBots(bots) {
      const container = document.getElementById('botsList');
      if (bots.length === 0) {
        container.innerHTML = '<p class="text-gray-400">No bots configured. Add a bot token below to get started.</p>';
        return;
      }
      
      container.innerHTML = bots.map(b => `
        <div class="flex items-center justify-between p-4 bg-gray-700 rounded-lg">
          <div>
            <div class="font-medium">${b.id} <span class="text-xs text-gray-500">#${b.index}</span></div>
            <div class="text-gray-400 text-sm font-mono">${b.token}</div>
          </div>
          <div class="flex items-center gap-3">
            <span class="${b.disabled ? 'text-red-400' : 'text-green-400'}">${b.disabled ? 'âŒ Disabled' : 'âœ… Active'}</span>
            <button onclick="toggleBot('${b.id}')" class="btn px-3 py-2 ${b.disabled ? 'bg-green-600 hover:bg-green-700' : 'bg-orange-600 hover:bg-orange-700'} rounded-lg text-sm">
              ${b.disabled ? 'Enable' : 'Disable'}
            </button>
            <button onclick="removeBot(${b.index})" class="btn px-3 py-2 bg-red-600 hover:bg-red-700 rounded-lg text-sm">Remove</button>
          </div>
        </div>
      `).join('');
    }

    async function toggleBot(botId) {
      try {
        const data = await api(`/bots/${botId}/toggle`, { method: 'POST' });
        toast(`Bot ${data.disabled ? 'disabled' : 'enabled'}`, 'success');
        loadBots();
      } catch (err) {
        toast('Failed to toggle bot', 'error');
      }
    }

    async function addBot() {
      const token = document.getElementById('newBotToken').value.trim();
      if (!token) {
        toast('Enter a bot token', 'error');
        return;
      }
      
      try {
        const data = await api('/bots/add', { method: 'POST', body: { token } });
        toast(data.message || 'Bot added!', 'success');
        document.getElementById('newBotToken').value = '';
        loadBots();
      } catch (err) {
        toast(err.message || 'Failed to add bot', 'error');
      }
    }

    async function removeBot(index) {
      if (!confirm('Remove this bot? You will need to restart the server.')) return;
      
      try {
        const data = await api(`/bots/${index}/remove`, { method: 'POST' });
        toast(data.message || 'Bot removed!', 'success');
        loadBots();
      } catch (err) {
        toast(err.message || 'Failed to remove bot', 'error');
      }
    }

    async function restartBots() {
      if (!confirm('âš ï¸ Restart all bots?\n\nThis will briefly disconnect all active chats and reload bot configuration.')) return;
      
      try {
        toast('ğŸ”„ Restarting bots...', 'success');
        const data = await api('/bots/restart', { method: 'POST' });
        
        if (data.success) {
          toast('âœ… ' + (data.message || 'All bots restarted successfully!'), 'success');
          // Reload bots list to show updated status
          setTimeout(() => loadBots(), 1000);
        } else {
          toast('âŒ ' + (data.error || 'Restart failed'), 'error');
        }
      } catch (err) {
        toast(err.message || 'Failed to restart bots', 'error');
      }
    }

    // ==================== VIP PLANS ====================
    function renderVipPlans() {
      const container = document.getElementById('vipPlansList');
      if (!vipPlans.length) {
        container.innerHTML = '<p class="text-gray-400">No VIP plans configured. Add your first plan below.</p>';
        return;
      }
      
      container.innerHTML = vipPlans.map((plan, i) => `
        <div class="flex items-center justify-between p-4 bg-gray-700 rounded-lg">
          <div class="flex items-center gap-4">
            <div class="${plan.enabled !== false ? 'text-green-400' : 'text-gray-500'}">
              ${plan.enabled !== false ? 'âœ…' : 'âŒ'}
            </div>
            <div>
              <div class="font-medium">${plan.name || plan.label}</div>
              <div class="text-gray-400 text-sm">${plan.days} days â€¢ ${plan.stars} â­ Stars</div>
            </div>
          </div>
          <div class="flex gap-2">
            <button onclick="toggleVipPlan(${i})" class="btn px-3 py-1 ${plan.enabled !== false ? 'bg-orange-600 hover:bg-orange-700' : 'bg-green-600 hover:bg-green-700'} rounded text-sm">
              ${plan.enabled !== false ? 'Disable' : 'Enable'}
            </button>
            <button onclick="removeVipPlan(${i})" class="btn px-3 py-1 bg-red-600 hover:bg-red-700 rounded text-sm">Remove</button>
          </div>
        </div>
      `).join('');
      
      // Update VIP stats
      const planCount = document.getElementById('vip-stat-revenue');
      if (planCount) planCount.textContent = vipPlans.length;
      const popular = document.getElementById('vip-stat-popular');
      if (popular && vipPlans.length > 0) popular.textContent = vipPlans[0].name || 'N/A';
    }

    async function toggleVipPlan(index) {
      vipPlans[index].enabled = !vipPlans[index].enabled;
      
      try {
        await api('/config', { method: 'POST', body: { key: 'vip_plans_config', value: JSON.stringify(vipPlans) } });
        renderVipPlans();
        toast(`Plan ${vipPlans[index].enabled ? 'enabled' : 'disabled'}`, 'success');
      } catch (err) {
        vipPlans[index].enabled = !vipPlans[index].enabled;
        toast('Failed to update plan', 'error');
      }
    }

    async function addVipPlan() {
      const name = document.getElementById('newPlanName').value.trim();
      const days = parseInt(document.getElementById('newPlanDays').value);
      const stars = parseInt(document.getElementById('newPlanStars').value);
      const enabled = document.getElementById('newPlanEnabled').checked;
      
      if (!name || !days || !stars) {
        toast('Fill all required fields', 'error');
        return;
      }
      
      if (days < 1 || stars < 1) {
        toast('Days and Stars must be at least 1', 'error');
        return;
      }
      
      vipPlans.push({ name, label: name, days, stars, enabled, id: `plan_${Date.now()}` });
      
      try {
        await api('/config', { method: 'POST', body: { key: 'vip_plans_config', value: JSON.stringify(vipPlans) } });
        renderVipPlans();
        document.getElementById('newPlanName').value = '';
        document.getElementById('newPlanDays').value = '';
        document.getElementById('newPlanStars').value = '';
        document.getElementById('newPlanEnabled').checked = true;
        toast('VIP plan added!', 'success');
      } catch (err) {
        vipPlans.pop();
        toast('Failed to add plan', 'error');
      }
    }

    async function removeVipPlan(index) {
      if (!confirm('Remove this plan?')) return;
      const removed = vipPlans.splice(index, 1);
      
      try {
        await api('/config', { method: 'POST', body: { key: 'vip_plans_config', value: JSON.stringify(vipPlans) } });
        renderVipPlans();
        toast('VIP plan removed', 'success');
      } catch (err) {
        vipPlans.splice(index, 0, ...removed);
        toast('Failed to remove plan', 'error');
      }
    }

    // ==================== BROADCAST ====================
    async function sendBroadcast() {
      const message = document.getElementById('broadcastMessage').value.trim();
      const audience = document.getElementById('broadcastAudience').value;
      
      if (!message) {
        toast('Enter a message', 'error');
        return;
      }
      
      if (!confirm('Send broadcast to ' + audience + ' users?')) return;
      
      try {
        await api('/broadcast', { method: 'POST', body: { message, audience } });
        toast('Broadcast queued!', 'success');
        document.getElementById('broadcastMessage').value = '';
      } catch (err) {
        toast('Failed to send broadcast', 'error');
      }
    }

    // ==================== MESSAGES MANAGEMENT ====================
    const messageLabels = {
      'msg_welcome': { label: 'ğŸ‘‹ Welcome Message', desc: 'Shown when user first starts the bot' },
      'msg_searching': { label: 'ğŸ” Searching Message', desc: 'Shown when looking for partner' },
      'msg_connected': { label: 'ğŸ‰ Connected Message', desc: 'Shown when partner found' },
      'msg_partner_left': { label: 'ğŸ‘‹ Partner Left', desc: 'Shown when partner disconnects' },
      'msg_chat_ended': { label: 'âœ… Chat Ended', desc: 'Shown when user ends chat' },
      'msg_not_paired': { label: 'âš ï¸ Not Paired', desc: 'Shown when user tries to chat without partner' },
      'msg_banned_user': { label: 'ğŸš« Banned Message', desc: 'Shown to banned users' },
      'msg_maintenance': { label: 'ğŸ”§ Maintenance', desc: 'Shown during maintenance mode' },
      'msg_rate_limited': { label: 'â° Rate Limited', desc: 'Shown when user sends too fast' }
    };

    async function loadMessages() {
      try {
        botMessages = await api('/messages');
        renderMessages();
      } catch (err) {
        toast('Failed to load messages', 'error');
      }
    }

    function renderMessages() {
      const container = document.getElementById('messagesContainer');
      container.innerHTML = Object.entries(messageLabels).map(([key, info]) => `
        <div class="bg-gray-700 rounded-lg p-4">
          <label class="block font-medium mb-1">${info.label}</label>
          <p class="text-gray-400 text-xs mb-2">${info.desc}</p>
          <textarea 
            id="input-${key}" 
            class="w-full p-3 bg-gray-600 rounded-lg text-sm" 
            rows="3"
            placeholder="Enter message..."
          >${botMessages[key] || ''}</textarea>
        </div>
      `).join('');
    }

    async function saveAllMessages() {
      const updates = [];
      for (const key of Object.keys(messageLabels)) {
        const input = document.getElementById(`input-${key}`);
        if (input) {
          updates.push({ key, value: input.value });
        }
      }
      
      try {
        for (const { key, value } of updates) {
          await api('/messages', { method: 'POST', body: { key, value } });
        }
        toast('All messages saved!', 'success');
      } catch (err) {
        toast('Failed to save messages', 'error');
      }
    }

    // ==================== ANALYTICS ====================
    let analyticsCharts = {};

    function setDateRange(days) {
      const end = new Date();
      const start = new Date();
      start.setDate(start.getDate() - days);
      
      document.getElementById('analyticsStartDate').value = start.toISOString().split('T')[0];
      document.getElementById('analyticsEndDate').value = end.toISOString().split('T')[0];
    }

    async function loadAnalytics() {
      const startDate = document.getElementById('analyticsStartDate').value;
      const endDate = document.getElementById('analyticsEndDate').value;
      
      if (!startDate || !endDate) {
        toast('Please select date range', 'error');
        return;
      }
      
      try {
        const data = await api(`/analytics?startDate=${startDate}&endDate=${endDate}`);
        renderAnalyticsCharts(data);
        toast('Analytics loaded', 'success');
      } catch (err) {
        toast('Failed to load analytics', 'error');
      }
    }

    function renderAnalyticsCharts(data) {
      const labels = data.map(d => d.date);
      
      // Destroy existing charts
      Object.values(analyticsCharts).forEach(chart => chart.destroy());
      
      // User Growth Chart
      analyticsCharts.userGrowth = new Chart(document.getElementById('userGrowthChart'), {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'New Users',
            data: data.map(d => d.newUsers || 0),
            borderColor: '#60a5fa',
            backgroundColor: 'rgba(96, 165, 250, 0.1)',
            fill: true,
            tension: 0.3
          }, {
            label: 'Active Users',
            data: data.map(d => d.activeUsers || 0),
            borderColor: '#34d399',
            backgroundColor: 'rgba(52, 211, 153, 0.1)',
            fill: true,
            tension: 0.3
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { labels: { color: '#9ca3af' } } },
          scales: {
            x: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } },
            y: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } }
          }
        }
      });
      
      // Chat Activity Chart
      analyticsCharts.chatActivity = new Chart(document.getElementById('chatActivityChart'), {
        type: 'bar',
        data: {
          labels,
          datasets: [{
            label: 'Total Chats',
            data: data.map(d => d.totalChats || 0),
            backgroundColor: '#8b5cf6'
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { labels: { color: '#9ca3af' } } },
          scales: {
            x: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } },
            y: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } }
          }
        }
      });
      
      // VIP Revenue Chart
      analyticsCharts.vipRevenue = new Chart(document.getElementById('vipRevenueChart'), {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'VIP Revenue (Stars)',
            data: data.map(d => d.vipRevenue || 0),
            borderColor: '#fbbf24',
            backgroundColor: 'rgba(251, 191, 36, 0.1)',
            fill: true,
            tension: 0.3
          }, {
            label: 'Lock Revenue (Stars)',
            data: data.map(d => d.lockRevenue || 0),
            borderColor: '#f472b6',
            backgroundColor: 'rgba(244, 114, 182, 0.1)',
            fill: true,
            tension: 0.3
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { labels: { color: '#9ca3af' } } },
          scales: {
            x: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } },
            y: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } }
          }
        }
      });
      
      // Ratings Chart
      const totalPositive = data.reduce((s, d) => s + (d.positiveRatings || 0), 0);
      const totalNegative = data.reduce((s, d) => s + (d.negativeRatings || 0), 0);
      const totalReports = data.reduce((s, d) => s + (d.reports || 0), 0);
      
      analyticsCharts.ratings = new Chart(document.getElementById('ratingsChart'), {
        type: 'doughnut',
        data: {
          labels: ['ğŸ‘ Positive', 'ğŸ‘ Negative', 'âš ï¸ Reports'],
          datasets: [{
            data: [totalPositive, totalNegative, totalReports],
            backgroundColor: ['#34d399', '#f87171', '#fbbf24']
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { labels: { color: '#9ca3af' } } }
        }
      });
    }

    // ==================== AUDIT LOGS ====================
    let auditLogsPage = 1;
    const auditLogsPerPage = 20;

    async function loadAuditLogs(direction) {
      if (direction === 'next') auditLogsPage++;
      else if (direction === 'prev' && auditLogsPage > 1) auditLogsPage--;
      else if (!direction) auditLogsPage = 1;
      
      const category = document.getElementById('auditCategory').value;
      
      try {
        const data = await api(`/audit-logs?page=${auditLogsPage}&limit=${auditLogsPerPage}${category ? '&category=' + category : ''}`);
        renderAuditLogs(data);
      } catch (err) {
        toast('Failed to load audit logs', 'error');
      }
    }

    function renderAuditLogs(data) {
      const container = document.getElementById('auditLogsList');
      const logs = data.logs || [];
      
      if (logs.length === 0) {
        container.innerHTML = '<p class="text-gray-500 text-center py-8">No audit logs found</p>';
        return;
      }
      
      const categoryIcons = {
        auth: 'ğŸ”', user: 'ğŸ‘¤', config: 'âš™ï¸', broadcast: 'ğŸ“¢',
        bot: 'ğŸ¤–', export: 'ğŸ“¤', maintenance: 'ğŸ”§', report: 'âš ï¸'
      };
      
      container.innerHTML = logs.map(log => `
        <div class="bg-gray-700 rounded-lg p-3 flex items-start gap-3">
          <span class="text-2xl">${categoryIcons[log.category] || 'ğŸ“'}</span>
          <div class="flex-1">
            <div class="flex justify-between">
              <span class="font-medium">${log.action}</span>
              <span class="text-xs text-gray-400">${new Date(log.createdAt).toLocaleString()}</span>
            </div>
            <p class="text-sm text-gray-400">Admin: ${log.adminId} ${log.targetType ? `â†’ ${log.targetType}: ${log.targetId}` : ''}</p>
            ${log.details ? `<p class="text-xs text-gray-500 mt-1">${log.details}</p>` : ''}
          </div>
        </div>
      `).join('');
      
      document.getElementById('auditPageInfo').textContent = `Page ${auditLogsPage}`;
      document.getElementById('auditPrevBtn').disabled = auditLogsPage <= 1;
      document.getElementById('auditNextBtn').disabled = logs.length < auditLogsPerPage;
    }

    // ==================== EXPORT ====================
    async function exportData() {
      const table = document.getElementById('exportTable').value;
      const format = document.querySelector('input[name="exportFormat"]:checked').value;
      const limit = document.getElementById('exportLimit').value;
      
      try {
        toast('Preparing export...', 'info');
        const response = await fetch(`/api/admin/export?table=${table}&format=${format}${limit ? '&limit=' + limit : ''}`, {
          headers: { 'X-Admin-Token': authToken }
        });
        
        if (!response.ok) throw new Error('Export failed');
        
        const blob = await response.blob();
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `${table}_export.${format === 'excel' ? 'xlsx' : format}`;
        a.click();
        URL.revokeObjectURL(url);
        
        toast('Export downloaded!', 'success');
      } catch (err) {
        toast('Failed to export data', 'error');
      }
    }

    // ==================== MAINTENANCE ====================
    let maintenanceMode = false;

    async function loadMaintenanceStatus() {
      try {
        const data = await api('/maintenance/status');
        maintenanceMode = data.enabled;
        updateMaintenanceToggle();
        renderMaintenanceList(data.scheduled || []);
      } catch (err) {
        console.error('Failed to load maintenance status');
      }
    }

    function updateMaintenanceToggle() {
      const btn = document.getElementById('maintenanceToggle');
      if (maintenanceMode) {
        btn.textContent = 'ğŸ”´ ENABLED - Click to Disable';
        btn.className = 'btn px-6 py-2 rounded-lg font-medium bg-red-600 hover:bg-red-700';
      } else {
        btn.textContent = 'ğŸŸ¢ DISABLED - Click to Enable';
        btn.className = 'btn px-6 py-2 rounded-lg font-medium bg-green-600 hover:bg-green-700';
      }
    }

    async function toggleMaintenance() {
      const action = maintenanceMode ? 'disable' : 'enable';
      if (!confirm(`${action.charAt(0).toUpperCase() + action.slice(1)} maintenance mode?`)) return;
      
      try {
        await api('/maintenance/toggle', { method: 'POST', body: { enabled: !maintenanceMode } });
        maintenanceMode = !maintenanceMode;
        updateMaintenanceToggle();
        toast(`Maintenance mode ${maintenanceMode ? 'enabled' : 'disabled'}`, 'success');
      } catch (err) {
        toast('Failed to toggle maintenance', 'error');
      }
    }

    async function scheduleMaintenance() {
      const title = document.getElementById('maintenanceTitle').value.trim();
      const startTime = document.getElementById('maintenanceStart').value;
      const endTime = document.getElementById('maintenanceEnd').value;
      const notifyUsers = document.getElementById('maintenanceNotify').checked;
      
      if (!title || !startTime || !endTime) {
        toast('Please fill all fields', 'error');
        return;
      }
      
      try {
        await api('/maintenance/schedule', { method: 'POST', body: { title, startTime, endTime, notifyUsers } });
        toast('Maintenance scheduled!', 'success');
        loadMaintenanceStatus();
        document.getElementById('maintenanceTitle').value = '';
        document.getElementById('maintenanceStart').value = '';
        document.getElementById('maintenanceEnd').value = '';
      } catch (err) {
        toast('Failed to schedule maintenance', 'error');
      }
    }

    function renderMaintenanceList(scheduled) {
      const container = document.getElementById('maintenanceList');
      
      if (!scheduled || scheduled.length === 0) {
        container.innerHTML = '<p class="text-gray-500 text-center py-4">No scheduled maintenance</p>';
        return;
      }
      
      container.innerHTML = scheduled.map(m => `
        <div class="bg-gray-700 rounded-lg p-3 flex justify-between items-center">
          <div>
            <span class="font-medium">${m.title}</span>
            <p class="text-sm text-gray-400">${new Date(m.startTime).toLocaleString()} â†’ ${new Date(m.endTime).toLocaleString()}</p>
          </div>
          <div class="flex gap-2">
            <span class="px-2 py-1 rounded text-xs ${m.status === 'scheduled' ? 'bg-yellow-600' : m.status === 'active' ? 'bg-red-600' : 'bg-green-600'}">${m.status}</span>
            <button onclick="cancelMaintenance(${m.id})" class="btn px-2 py-1 bg-red-600 hover:bg-red-700 rounded text-xs">Cancel</button>
          </div>
        </div>
      `).join('');
    }

    async function cancelMaintenance(id) {
      if (!confirm('Cancel this scheduled maintenance?')) return;
      
      try {
        await api(`/maintenance/${id}`, { method: 'DELETE' });
        toast('Maintenance cancelled', 'success');
        loadMaintenanceStatus();
      } catch (err) {
        toast('Failed to cancel maintenance', 'error');
      }
    }

    // ==================== TABS ====================
    function showTab(tabName) {
      // Update tab buttons
      document.querySelectorAll('.tab').forEach(btn => {
        btn.classList.remove('tab-active');
        btn.classList.add('text-gray-400');
        if (btn.dataset.tab === tabName) {
          btn.classList.add('tab-active');
          btn.classList.remove('text-gray-400');
        }
      });
      
      // Update content
      document.querySelectorAll('.tab-content').forEach(section => {
        section.classList.add('hidden');
      });
      document.getElementById(`tab-${tabName}`).classList.remove('hidden');
      
      // Load tab-specific data
      if (tabName === 'users') searchUsers();
      if (tabName === 'bots') loadBots();
      if (tabName === 'messages') loadMessages();
      if (tabName === 'vip') loadStats();
      if (tabName === 'analytics') {
        // Set default date range (last 30 days)
        if (!document.getElementById('analyticsStartDate').value) {
          setDateRange(30);
        }
      }
      if (tabName === 'audit') loadAuditLogs();
      if (tabName === 'maintenance') loadMaintenanceStatus();
    }

    document.querySelectorAll('.tab').forEach(tab => {
      tab.onclick = () => showTab(tab.dataset.tab);
    });

    // ==================== TOAST ====================
    function toast(message, type = 'info') {
      const container = document.getElementById('toastContainer');
      const colors = { success: 'bg-green-600', error: 'bg-red-600', info: 'bg-blue-600' };
      
      const div = document.createElement('div');
      div.className = `toast ${colors[type]} px-4 py-3 rounded-lg shadow-lg`;
      div.textContent = message;
      container.appendChild(div);
      
      setTimeout(() => div.remove(), 3000);
    }

    // ==================== INIT ====================
    if (authToken) {
      showDashboard();
    }
  </script>
</body>
</html>
