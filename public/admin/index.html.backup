<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bot Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Custom minimal styles */
    .tab-active { border-bottom: 3px solid #6366f1; color: #6366f1; }
    .toggle-on { background: #22c55e; }
    .toggle-off { background: #dc2626; }
    .toast { animation: slideIn 0.3s ease; }
    @keyframes slideIn { from { transform: translateX(100%); } to { transform: translateX(0); } }
    .spinner { border: 2px solid #f3f3f3; border-top: 2px solid #6366f1; border-radius: 50%; width: 16px; height: 16px; animation: spin 0.8s linear infinite; }
    @keyframes spin { to { transform: rotate(360deg); } }
    .btn { transition: all 0.15s; }
    .btn:active { transform: scale(0.97); }
  </style>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
  <!-- Login Screen -->
  <div id="loginScreen" class="flex items-center justify-center min-h-screen">
    <div class="bg-gray-800 p-8 rounded-xl shadow-xl w-full max-w-md">
      <h1 class="text-2xl font-bold text-center mb-6 text-indigo-400">ğŸ¤– Bot Admin Panel</h1>
      <form id="loginForm" class="space-y-4">
        <input type="text" id="username" placeholder="Username" class="w-full p-3 bg-gray-700 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
        <input type="password" id="password" placeholder="Password" class="w-full p-3 bg-gray-700 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
        <button type="submit" class="btn w-full p-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg font-medium">Login</button>
        <p id="loginError" class="text-red-400 text-center hidden"></p>
      </form>
    </div>
  </div>

  <!-- Dashboard (Hidden until login) -->
  <div id="dashboard" class="hidden">
    <!-- Header -->
    <header class="bg-gray-800 border-b border-gray-700 px-6 py-4 flex justify-between items-center sticky top-0 z-50">
      <h1 class="text-xl font-bold text-indigo-400">ğŸ¤– Admin Panel</h1>
      <div class="flex items-center gap-4">
        <span id="adminName" class="text-gray-400 text-sm"></span>
        <button id="logoutBtn" class="btn px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg text-sm">Logout</button>
      </div>
    </header>

    <!-- Tabs -->
    <nav class="bg-gray-800 border-b border-gray-700 px-6 overflow-x-auto">
      <div class="flex gap-6 text-sm font-medium">
        <button class="tab py-4 px-1 tab-active" data-tab="overview">ğŸ“Š Overview</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="analytics">ğŸ“ˆ Analytics</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="config">âš™ï¸ Config</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="messages">ğŸ’¬ Messages</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="users">ğŸ‘¥ Users</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="bots">ğŸ¤– Bots</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="vip">â­ VIP Plans</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="broadcast">ğŸ“¢ Broadcast</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="audit">ğŸ“ Audit Logs</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="export">ğŸ“¤ Export</button>
        <button class="tab py-4 px-1 text-gray-400 hover:text-gray-200" data-tab="maintenance">ğŸ”§ Maintenance</button>
      </div>
    </nav>

    <!-- Content Area -->
    <main class="p-6 max-w-7xl mx-auto">
      <!-- Overview Tab -->
      <section id="tab-overview" class="tab-content">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-4 mb-8">
          <div class="bg-gray-800 rounded-xl p-4 text-center">
            <div id="stat-totalUsers" class="text-3xl font-bold text-blue-400">-</div>
            <div class="text-gray-400 text-sm mt-1">Total Users</div>
          </div>
          <div class="bg-gray-800 rounded-xl p-4 text-center">
            <div id="stat-onlineUsers" class="text-3xl font-bold text-emerald-400">-</div>
            <div class="text-gray-400 text-sm mt-1">ğŸŸ¢ Online Now</div>
          </div>
          <div class="bg-gray-800 rounded-xl p-4 text-center">
            <div id="stat-vipActive" class="text-3xl font-bold text-yellow-400">-</div>
            <div class="text-gray-400 text-sm mt-1">Active VIP</div>
          </div>
          <div class="bg-gray-800 rounded-xl p-4 text-center">
            <div id="stat-todayUsers" class="text-3xl font-bold text-green-400">-</div>
            <div class="text-gray-400 text-sm mt-1">Today Joined</div>
          </div>
          <div class="bg-gray-800 rounded-xl p-4 text-center">
            <div id="stat-activeChats" class="text-3xl font-bold text-purple-400">-</div>
            <div class="text-gray-400 text-sm mt-1">Active Chats</div>
          </div>
          <div class="bg-gray-800 rounded-xl p-4 text-center">
            <div id="stat-queueSize" class="text-3xl font-bold text-cyan-400">-</div>
            <div class="text-gray-400 text-sm mt-1">In Queue</div>
          </div>
          <div class="bg-gray-800 rounded-xl p-4 text-center">
            <div id="stat-bannedUsers" class="text-3xl font-bold text-red-400">-</div>
            <div class="text-gray-400 text-sm mt-1">Banned</div>
          </div>
        </div>
        
        <!-- Active Users Section -->
        <div class="bg-gray-800 rounded-xl p-6 mb-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium">ğŸŸ¢ Live Active Users</h3>
            <button onclick="loadActiveUsers()" class="btn px-4 py-2 bg-emerald-600 hover:bg-emerald-700 rounded-lg text-sm">ğŸ”„ Refresh</button>
          </div>
          <div id="activeUsersList" class="grid md:grid-cols-2 lg:grid-cols-3 gap-3 max-h-64 overflow-y-auto">
            <p class="text-gray-400">Click refresh to load active users...</p>
          </div>
        </div>
        
        <div class="bg-gray-800 rounded-xl p-6">
          <h3 class="text-lg font-medium mb-4">Quick Actions</h3>
          <div class="flex flex-wrap gap-3">
            <button onclick="refreshStats()" class="btn px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-lg">ğŸ”„ Refresh Stats</button>
            <button onclick="showTab('broadcast')" class="btn px-4 py-2 bg-green-600 hover:bg-green-700 rounded-lg">ğŸ“¢ Send Broadcast</button>
            <button onclick="showTab('users')" class="btn px-4 py-2 bg-purple-600 hover:bg-purple-700 rounded-lg">ğŸ‘¥ Manage Users</button>
            <button onclick="showTab('config')" class="btn px-4 py-2 bg-orange-600 hover:bg-orange-700 rounded-lg">âš™ï¸ Settings</button>
          </div>
        </div>
      </section>

      <!-- Config Tab -->
      <section id="tab-config" class="tab-content hidden">
        <div class="grid md:grid-cols-2 gap-6">
          <!-- Feature Flags -->
          <div class="bg-gray-800 rounded-xl p-6">
            <h3 class="text-lg font-medium mb-4">ğŸ›ï¸ Feature Flags</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span>Stars Payments</span>
                <button onclick="toggleConfig('ENABLE_STARS_PAYMENTS')" id="toggle-ENABLE_STARS_PAYMENTS" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center">
                <span>VIP System</span>
                <button onclick="toggleConfig('ENABLE_VIP')" id="toggle-ENABLE_VIP" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center">
                <span>Lock Chat</span>
                <button onclick="toggleConfig('ENABLE_LOCK_CHAT')" id="toggle-ENABLE_LOCK_CHAT" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center">
                <span>Referrals</span>
                <button onclick="toggleConfig('ENABLE_REFERRALS')" id="toggle-ENABLE_REFERRALS" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center">
                <span>Admin Alerts</span>
                <button onclick="toggleConfig('ENABLE_ADMIN_ALERTS')" id="toggle-ENABLE_ADMIN_ALERTS" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center">
                <span>Cross-Bot Matching</span>
                <button onclick="toggleConfig('ENABLE_CROSS_BOT_MATCHING')" id="toggle-ENABLE_CROSS_BOT_MATCHING" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center">
                <span>Affiliate System</span>
                <button onclick="toggleConfig('ENABLE_AFFILIATE_SYSTEM')" id="toggle-ENABLE_AFFILIATE_SYSTEM" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center">
                <span>Abuse Detection</span>
                <button onclick="toggleConfig('ENABLE_ABUSE_DETECTION')" id="toggle-ENABLE_ABUSE_DETECTION" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div class="flex justify-between items-center border-t border-gray-700 pt-4">
                <span class="text-red-400 font-medium">âš ï¸ Maintenance Mode</span>
                <button onclick="toggleConfig('MAINTENANCE_MODE')" id="toggle-MAINTENANCE_MODE" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
            </div>
          </div>

          <!-- Lock Chat Pricing -->
          <div class="bg-gray-800 rounded-xl p-6">
            <h3 class="text-lg font-medium mb-4">ğŸ”’ Lock Chat Pricing (Stars)</h3>
            <div class="space-y-4">
              <div>
                <label class="block text-gray-400 text-sm mb-1">5 Minutes</label>
                <input type="number" id="lock_chat_5min_price" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="15">
              </div>
              <div>
                <label class="block text-gray-400 text-sm mb-1">10 Minutes</label>
                <input type="number" id="lock_chat_10min_price" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="25">
              </div>
              <div>
                <label class="block text-gray-400 text-sm mb-1">15 Minutes</label>
                <input type="number" id="lock_chat_15min_price" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="35">
              </div>
              <button onclick="saveLockPricing()" class="btn w-full p-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg">Save Lock Pricing</button>
            </div>
          </div>

          <!-- Required Channels -->
          <div class="bg-gray-800 rounded-xl p-6">
            <h3 class="text-lg font-medium mb-4">ğŸ“¢ Required Channels</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center mb-4">
                <span>Enable Channel Requirement</span>
                <button onclick="toggleConfig('required_channel_enabled')" id="toggle-required_channel_enabled" class="w-12 h-6 rounded-full toggle-off relative">
                  <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
                </button>
              </div>
              <div>
                <label class="block text-gray-400 text-sm mb-1">Channel 1 (e.g., @channel)</label>
                <input type="text" id="required_channel_1" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="@yourchannel1">
              </div>
              <div>
                <label class="block text-gray-400 text-sm mb-1">Channel 2 (optional)</label>
                <input type="text" id="required_channel_2" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="@yourchannel2">
              </div>
              <button onclick="saveChannels()" class="btn w-full p-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg">Save Channels</button>
            </div>
          </div>

          <!-- Referral Settings -->
          <div class="bg-gray-800 rounded-xl p-6">
            <h3 class="text-lg font-medium mb-4">ğŸ Referral Settings</h3>
            <div class="space-y-4">
              <div>
                <label class="block text-gray-400 text-sm mb-1">Referral VIP Days Reward</label>
                <input type="number" id="referral_vip_days" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="10">
              </div>
              <div>
                <label class="block text-gray-400 text-sm mb-1">Affiliate Commission (%)</label>
                <input type="number" id="affiliate_commission" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="0.8" step="0.1">
              </div>
              <button onclick="saveReferral()" class="btn w-full p-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg">Save Referral Settings</button>
            </div>
          </div>
        </div>
      </section>

      <!-- Messages Tab -->
      <section id="tab-messages" class="tab-content hidden">
        <div class="bg-gray-800 rounded-xl p-6">
          <h3 class="text-lg font-medium mb-4">ğŸ’¬ Customize Bot Messages</h3>
          <p class="text-gray-400 text-sm mb-6">Customize the messages users see. Supports Telegram Markdown formatting.</p>
          
          <div class="grid md:grid-cols-2 gap-6" id="messagesContainer">
            <!-- Messages will be populated here -->
          </div>
          
          <div class="mt-6 pt-6 border-t border-gray-700">
            <button onclick="saveAllMessages()" class="btn px-6 py-3 bg-green-600 hover:bg-green-700 rounded-lg">ğŸ’¾ Save All Messages</button>
          </div>
        </div>
      </section>

      <!-- Users Tab -->
      <section id="tab-users" class="tab-content hidden">
        <div class="bg-gray-800 rounded-xl p-6">
          <div class="flex flex-col md:flex-row gap-4 mb-6">
            <input type="text" id="userSearch" placeholder="Search by User ID..." class="flex-1 p-3 bg-gray-700 rounded-lg" onkeyup="if(event.key==='Enter')searchUsers()">
            <select id="userFilter" class="p-3 bg-gray-700 rounded-lg" onchange="searchUsers()">
              <option value="all">All Users</option>
              <option value="banned">Banned Only</option>
              <option value="vip">VIP Only</option>
            </select>
            <button onclick="searchUsers()" class="btn px-6 py-3 bg-indigo-600 hover:bg-indigo-700 rounded-lg">Search</button>
          </div>
          
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead>
                <tr class="text-left text-gray-400 border-b border-gray-700">
                  <th class="p-3">User ID</th>
                  <th class="p-3">Telegram ID</th>
                  <th class="p-3">Gender</th>
                  <th class="p-3">Status</th>
                  <th class="p-3">Bot</th>
                  <th class="p-3">Actions</th>
                </tr>
              </thead>
              <tbody id="usersList" class="divide-y divide-gray-700">
                <!-- Users populated here -->
              </tbody>
            </table>
          </div>
          
          <div id="usersPagination" class="flex justify-center gap-2 mt-4"></div>
        </div>
      </section>

      <!-- Bots Tab -->
      <section id="tab-bots" class="tab-content hidden">
        <div class="bg-gray-800 rounded-xl p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium">ğŸ¤– Bot Management</h3>
            <button onclick="restartBots()" class="btn px-4 py-2 bg-orange-600 hover:bg-orange-700 rounded-lg flex items-center gap-2">
              <span>ğŸ”„</span> Restart All Bots
            </button>
          </div>
          <div id="botsList" class="space-y-4">
            <!-- Bots populated here -->
          </div>
          
          <div class="mt-6 pt-6 border-t border-gray-700">
            <h4 class="font-medium mb-3">â• Add New Bot</h4>
            <div class="flex gap-4">
              <input type="text" id="newBotToken" class="flex-1 p-3 bg-gray-700 rounded-lg font-mono text-sm" placeholder="Enter bot token (e.g., 123456789:ABC-DEF...)">
              <button onclick="addBot()" class="btn px-6 py-3 bg-green-600 hover:bg-green-700 rounded-lg">Add Bot</button>
            </div>
            <p class="text-gray-400 text-sm mt-2">ğŸ’¡ After adding/removing bots, click "Restart All Bots" to apply changes.</p>
          </div>
        </div>
      </section>

      <!-- VIP Plans Tab -->
      <section id="tab-vip" class="tab-content hidden">
        <div class="bg-gray-800 rounded-xl p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium">â­ VIP Subscription Plans</h3>
            <div class="flex items-center gap-4">
              <span class="text-gray-400 text-sm">VIP System</span>
              <button onclick="toggleConfig('ENABLE_VIP')" id="toggle-vip-tab-ENABLE_VIP" class="w-12 h-6 rounded-full toggle-off relative">
                <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></span>
              </button>
            </div>
          </div>
          
          <div id="vipPlansList" class="space-y-4 mb-6">
            <!-- VIP plans populated here -->
          </div>
          
          <div class="border-t border-gray-700 pt-6">
            <h4 class="font-medium mb-4">â• Add New Plan</h4>
            <div class="grid md:grid-cols-5 gap-4">
              <input type="text" id="newPlanName" placeholder="Plan Name (e.g., Premium)" class="p-3 bg-gray-700 rounded-lg">
              <input type="number" id="newPlanDays" placeholder="Duration (days)" class="p-3 bg-gray-700 rounded-lg" min="1">
              <input type="number" id="newPlanStars" placeholder="Price (â­ Stars)" class="p-3 bg-gray-700 rounded-lg" min="1">
              <div class="flex items-center gap-2">
                <input type="checkbox" id="newPlanEnabled" checked class="w-5 h-5">
                <label for="newPlanEnabled" class="text-sm">Enabled</label>
              </div>
              <button onclick="addVipPlan()" class="btn p-3 bg-green-600 hover:bg-green-700 rounded-lg">Add Plan</button>
            </div>
          </div>
          
          <div class="border-t border-gray-700 pt-6 mt-6">
            <h4 class="font-medium mb-4">ğŸ“Š VIP Statistics</h4>
            <div class="grid md:grid-cols-3 gap-4">
              <div class="bg-gray-700 rounded-lg p-4 text-center">
                <div id="vip-stat-active" class="text-2xl font-bold text-yellow-400">-</div>
                <div class="text-gray-400 text-sm mt-1">Active VIP Users</div>
              </div>
              <div class="bg-gray-700 rounded-lg p-4 text-center">
                <div id="vip-stat-revenue" class="text-2xl font-bold text-green-400">-</div>
                <div class="text-gray-400 text-sm mt-1">Total Plans</div>
              </div>
              <div class="bg-gray-700 rounded-lg p-4 text-center">
                <div id="vip-stat-popular" class="text-2xl font-bold text-blue-400">-</div>
                <div class="text-gray-400 text-sm mt-1">Most Popular</div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Broadcast Tab -->
      <section id="tab-broadcast" class="tab-content hidden">
        <div class="bg-gray-800 rounded-xl p-6 max-w-2xl">
          <h3 class="text-lg font-medium mb-4">ğŸ“¢ Broadcast Message</h3>
          <div class="space-y-4">
            <select id="broadcastAudience" class="w-full p-3 bg-gray-700 rounded-lg">
              <option value="all">All Users</option>
              <option value="vip">VIP Users Only</option>
            </select>
            <textarea id="broadcastMessage" rows="6" class="w-full p-3 bg-gray-700 rounded-lg" placeholder="Enter your message... (supports Telegram Markdown)"></textarea>
            <button onclick="sendBroadcast()" class="btn w-full p-3 bg-green-600 hover:bg-green-700 rounded-lg">ğŸ“¢ Send Broadcast</button>
          </div>
        </div>
      </section>

      <!-- Analytics Tab -->
      <section id="tab-analytics" class="tab-content hidden">
        <div class="space-y-6">
          <!-- Date Range Selector -->
          <div class="bg-gray-800 rounded-xl p-4">
            <div class="flex flex-wrap gap-4 items-center">
              <div class="flex items-center gap-2">
                <label class="text-sm text-gray-400">From:</label>
                <input type="date" id="analyticsStartDate" class="p-2 bg-gray-700 rounded-lg text-sm">
              </div>
              <div class="flex items-center gap-2">
                <label class="text-sm text-gray-400">To:</label>
                <input type="date" id="analyticsEndDate" class="p-2 bg-gray-700 rounded-lg text-sm">
              </div>
              <div class="flex gap-2">
                <button onclick="setDateRange(7)" class="btn px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg text-sm">Last 7 days</button>
                <button onclick="setDateRange(30)" class="btn px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg text-sm">Last 30 days</button>
                <button onclick="setDateRange(90)" class="btn px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg text-sm">Last 90 days</button>
              </div>
              <button onclick="loadAnalytics()" class="btn px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg text-sm">ğŸ“Š Load Data</button>
            </div>
          </div>

          <!-- Charts -->
          <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-gray-800 rounded-xl p-6">
              <h4 class="text-lg font-medium mb-4">ğŸ‘¥ User Growth</h4>
              <canvas id="userGrowthChart" height="200"></canvas>
            </div>
            <div class="bg-gray-800 rounded-xl p-6">
              <h4 class="text-lg font-medium mb-4">ğŸ’¬ Chat Activity</h4>
              <canvas id="chatActivityChart" height="200"></canvas>
            </div>
            <div class="bg-gray-800 rounded-xl p-6">
              <h4 class="text-lg font-medium mb-4">â­ VIP Revenue</h4>
              <canvas id="vipRevenueChart" height="200"></canvas>
            </div>
            <div class="bg-gray-800 rounded-xl p-6">
              <h4 class="text-lg font-medium mb-4">â­ Ratings Distribution</h4>
              <canvas id="ratingsChart" height="200"></canvas>
            </div>
          </div>
        </div>
      </section>

      <!-- Audit Logs Tab -->
      <section id="tab-audit" class="tab-content hidden">
        <div class="bg-gray-800 rounded-xl p-6">
          <div class="flex flex-wrap gap-4 items-center mb-4">
            <h3 class="text-lg font-medium">ğŸ“ Admin Audit Logs</h3>
            <select id="auditCategory" class="p-2 bg-gray-700 rounded-lg text-sm">
              <option value="">All Categories</option>
