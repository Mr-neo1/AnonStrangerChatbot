# ==========================================
# TELEGRAM BOT CONFIGURATION
# ==========================================

# Primary bot token from @BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
BOT_ID=main

# Alternative: Multiple bot tokens (for multi-bot setup)
# BOT_TOKENS=token1,token2,token3

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL connection (production)
POSTGRES_URI=postgresql://username:password@localhost:5432/dbname

# Alternative: Generic database URL (fallback)
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# SQLite (development/testing)
# DB_STORAGE=./database.sqlite

# ==========================================
# REDIS CONFIGURATION (Optional)
# ==========================================

# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ==========================================
# ADMIN DASHBOARD CONFIGURATION
# ==========================================

# Telegram IDs of admin users (comma-separated)
# Get your Telegram ID from @userinfobot
ADMIN_TELEGRAM_IDS=123456789,987654321

# Admin dashboard HTTP port (default: 3000)
ADMIN_PORT=3000

# ==========================================
# ADMIN NOTIFICATION CHANNELS
# ==========================================

# Admin chat ID for alerts (your personal chat ID or group)
ADMIN_CHAT_ID=123456789

# Control chat for admin commands
ADMIN_CONTROL_CHAT_ID=1893973888

# Channel for media forwarding
ADMIN_MEDIA_CHANNEL_ID=-1001234567890

# Channel for abuse reports
ADMIN_ABUSE_CHANNEL_ID=-1001234567890

# ==========================================
# CHANNEL/GROUP REQUIREMENTS (Optional)
# ==========================================

# Required channel users must join
# REQUIRED_CHANNEL_USERNAME=@yourchannel
# REQUIRED_CHANNEL_ID=-1001234567890

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================

# Enable/disable features
# ENABLE_VIP=true
# ENABLE_LOCK_CHAT=true
# ENABLE_REFERRAL=true
# ENABLE_AFFILIATE=true

# ==========================================
# ENVIRONMENT
# ==========================================

NODE_ENV=production
# NODE_ENV=development
