# ===========================================
# Production Environment Configuration
# Anonymous Telegram Chatbot
# ===========================================
# Copy this file to .env.production and fill in your values

# Telegram Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Multiple bot tokens (comma-separated)
BOT_TOKENS=BOT1_TOKEN,BOT2_TOKEN,BOT3_TOKEN,BOT4_TOKEN

# ===========================================
# Database Configuration (PostgreSQL - Local)
# ===========================================
POSTGRES_URI=postgresql://chatbot:YOUR_DB_PASSWORD@localhost:5432/chatbot_db

# ===========================================
# Redis Configuration (Local)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_TELEGRAM_IDS=YOUR_TELEGRAM_ID
ADMIN_CONTROL_CHAT_ID=YOUR_ADMIN_CHANNEL_ID
ADMIN_CHAT_ID=YOUR_TELEGRAM_ID
ADMIN_MEDIA_CHANNEL_ID=YOUR_MEDIA_CHANNEL_ID

# Admin Panel Settings
ADMIN_PANEL_PORT=4000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD
ADMIN_JWT_SECRET=GENERATE_A_RANDOM_32_CHAR_SECRET

# Bot Admin (for system commands)
BOT_ADMIN_SECRET=YOUR_ADMIN_BOT_TOKEN

# Admin Panel URL (use localhost for internal communication)
ADMIN_PANEL_URL=http://localhost:4000

# ===========================================
# Feature Flags
# ===========================================
ENABLE_STARS_PAYMENTS=true
ENABLE_CROSS_BOT_MATCHING=true
ENABLE_ADMIN_ALERTS=true
ENABLE_VIP_LOCK_PREFERENCE=true
ENABLE_AFFILIATE_SYSTEM=true
ENABLE_REFERRALS=true
ENABLE_VIP=true

# ===========================================
# Environment Settings
# ===========================================
NODE_ENV=production
CLUSTER_MODE=false

# Database SSL (not needed for local PostgreSQL)
DB_SSL=false

# ===========================================
# Performance Settings (for 2GB VPS)
# ===========================================
NODE_OPTIONS=--max-old-space-size=512
